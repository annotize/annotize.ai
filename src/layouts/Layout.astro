---
interface Props {
  title: string;
}

import "@/styles/globals.css";
import "@fontsource-variable/inter";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body>
    <div
      class="flex flex-col gap-4 lg:gap-8 xl:gap-16 min-h-screen px-2 md:px-8 lg:px-16 xl:px-32 py-2 md:py-4"
    >
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
